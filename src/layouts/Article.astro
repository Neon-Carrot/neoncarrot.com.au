---
import { Image } from "@astrojs/image/components";

import "../styles/index.scss";
import type { ARTICLE_TOPICS } from "../constants";
import Chip from "../components/Chip.astro";
import Col from "../components/Col.astro";
import GetInTouchCard from "../components/GetInTouchCard.astro";
import Grid from "../components/Grid.astro";
import HalftoneDivider from "../components/HalftoneDivider.astro";
import Layout from "./Layout.astro";
import Section from "../components/Section.astro";

export interface Props {
  author: string;
  date: string;
  heroImgAlt: string;
  heroImgColor: string;
  heroImgSrc: ImageMetadata;
  title: string;
  topic: (typeof ARTICLE_TOPICS)[keyof typeof ARTICLE_TOPICS];
}

const {
  author,
  date,
  heroImgAlt,
  heroImgColor,
  heroImgSrc,
  title,
  topic,
}: Props = Astro.props;
---

<Layout alwaysShowNav title={`${title} | Neon Carrot`}>
  <main class="main bg-purple--light">
    <Section class="hero-section no-pb" deep>
      <Grid>
        <Col size={8} start={3} mdSize={8} mdStart={3} smSize={4} smStart={1}>
          <div class="spv-8">
            <a class="display-inline-block link" href="/articles">
              <strong class="link-underline">« Back to all articles</strong>
            </a>
          </div>
          <Chip class="spv-4" topic={topic} />
          <h1 class="heading-2 spv-4">
            {title}
          </h1>
          <div>
            <em>{author}, {date}</em>
          </div>
        </Col>
      </Grid>
    </Section>
    <Section class="position-relative no-pb no-pt" shallow>
      <Grid>
        <Col size={8} start={3} mdSize={8} mdStart={3} smSize={4} smStart={1}>
          <div class="hero-image-wrapper">
            <div class="bg-color" style={{ backgroundColor: heroImgColor }}>
              <Image
                alt={heroImgAlt}
                class="image"
                format="webp"
                width={768}
                src={heroImgSrc}
              />
            </div>
          </div>
        </Col>
      </Grid>
      <HalftoneDivider class="hero-divider" color="white" />
      <div class="divider-filler"></div>
    </Section>
    <Section class="bg--white no-pt no-pb">
      <slot />
      <Grid>
        <Col size={8} start={3} mdSize={8} mdStart={3} smSize={4} smStart={1}>
          <a class="display-inline-block link" href="/articles">
            <strong class="link-underline">« Back to all articles</strong>
          </a>
        </Col>
      </Grid>
      <Section class="no-pt" shallow />
      <HalftoneDivider color="yellow" />
    </Section>
    <GetInTouchCard />
  </main>
</Layout>

<style lang="scss">
  @import "../styles/variables.scss";

  .main {
    position: relative;
    z-index: 1;
  }

  .hero-section {
    padding-top: $spacing-32 !important;
  }

  .hero-image-wrapper {
    border: 2px solid $color-black;
    border-radius: 1rem;
    margin: $spacing-12 0;
    overflow: hidden;
  }

  .image {
    display: block;
    filter: brightness(1.5);
    height: 100%;
    mix-blend-mode: multiply;
    object-fit: cover;
  }

  .link {
    color: $color-black !important;
    text-decoration: none;

    &:hover,
    &:focus,
    &:focus-visible {
      .link-underline {
        background-size: 100% 2px;
      }
    }

    &:focus,
    &:focus-visible {
      border-color: $color-blue;
      outline: 4px solid $color-blue;
      outline-offset: 2px;
    }
  }

  .link-underline {
    display: inline;
    background: linear-gradient(to left, $color-black, $color-black);
    background-size: 0 2px;
    background-position: 0 100%, 100% 100%;
    background-repeat: no-repeat;
    transition: background-size cubic-bezier(0, 0, 0.2, 1) 400ms;

    &:hover {
      background-size: 100% 2px;
    }
  }

  .hero-divider {
    position: absolute;
    width: 100%;
    top: calc(50% - 103px);
    z-index: -10;
  }

  .divider-filler {
    background-color: $color-white;
    position: absolute;
    width: 100%;
    height: calc(50% - 103px);
    top: calc(50% + 103px);
    z-index: -10;
  }
</style>
