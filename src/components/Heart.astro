<style lang="scss">
  @import "../styles/variables.scss";

  @keyframes smallheart {
    0% {
      opacity: 1;
      transform: translateY(0);
    }
    20% {
      opacity: 1;
      transform: translateY(0);
    }
    40% {
      opacity: 0;
      transform: translateY(-0.5rem);
    }
    60% {
      opacity: 0;
      transform: translateY(0.5rem);
    }
    80% {
      opacity: 1;
      transform: translateY(0);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes bigheart {
    0% {
      transform: scale(1);
    }
    30% {
      transform: scale(1);
    }
    50% {
      transform: scale(0.95);
    }
    80% {
      transform: scale(1);
    }
    100% {
      transform: scale(1);
    }
  }

  .big-heart {
    animation: bigheart 6s ease-in-out infinite;
    transform-origin: center;
  }

  .small-heart {
    animation: smallheart 6s ease-out infinite;

    &.first {
      animation-delay: 0s;
    }
    &.second {
      animation-delay: 0.2s;
    }
    &.third {
      animation-delay: 0.4s;
    }
    &.fourth {
      animation-delay: 0.6s;
    }
  }
</style>
