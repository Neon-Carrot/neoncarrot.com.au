<style lang="scss">
  @import "../styles/variables.scss";

  @keyframes smallarrow {
    0% {
      opacity: 1;
      transform: translateY(0);
    }
    3% {
      opacity: 1;
      transform: translateY(0);
    }
    15% {
      opacity: 0;
      transform: translateY(-65%);
    }
    16% {
      opacity: 0;
      transform: translateY(100%);
    }
    22% {
      opacity: 1;
      transform: translateY(100%);
    }
    35% {
      opacity: 1;
      transform: translateY(0);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes bigarrow {
    0% {
      transform: translateY(0);
    }
    15% {
      transform: translateY(-0.5rem);
    }
    25% {
      transform: translateY(-0.5rem);
    }
    90% {
      transform: translateY(0);
    }
    100% {
      transform: translateY(0);
    }
  }

  .big-arrow {
    animation: bigarrow 5s ease-out infinite;
    transform-origin: center;
  }

  .small-arrow {
    animation: smallarrow 5s ease-out infinite;

    &.first {
      animation-delay: 0s;
    }
    &.second {
      animation-delay: 0.2s;
    }
    &.third {
      animation-delay: 0.4s;
    }
    &.fourth {
      animation-delay: 0.6s;
    }
  }
</style>
